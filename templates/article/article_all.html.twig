{% extends 'base/base-admin.html.twig' %}

{% block title %}

{% endblock %}

{% block content %}

    <h2>Articles</h2>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Published</th>
            <th scope="col">Category</th>
        </tr>
        </thead>
        <tbody>
       {% for article in articles %}
        <tr>
            <th scope="row">{{ article.id }}</th>
            <td>
                <a href="{{ path('article_show', { id: article.id } ) }}">
                    {{ article.title }}
                </a>
            </td>
            <td>{{ article.publishedAt|date(' l dS F Y H:i:s') }}</td>
            <td>category</td>
        </tr>
       {% endfor %}
        </tbody>
    </table>
{% endblock %}

